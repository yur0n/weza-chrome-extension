{
	"manifest_version": 3,
	"name": "My Extension",
	"version": "1.0",
	"description": "A simple extension",
	"permissions": [
		"tabs", 
		"storage",
		"alarms"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"action": {
		"default_icon": {
      		"16": "icon.png",     
      		"24": "icon.png",     
      		"32": "icon.png"      
    	},
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"host_permissions": [
		"https://*/*",
		"http://*/*"
	]
}